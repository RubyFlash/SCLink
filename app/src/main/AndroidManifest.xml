<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sclink">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SCLink">
        <activity
            android:name=".presentation.ui.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.SCLink.SplashScreen.">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.lessonsActivity.LessonsScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.SCLink.LessonsScreen."/>
        <activity
            android:name=".presentation.ui.foldersActivity.FoldersScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.SCLink.FoldersScreen.">
        </activity>
    </application>

</manifest>